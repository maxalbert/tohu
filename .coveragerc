[run]
branch = True

[tool:pytest]
addopts = --cov-report=term-missing

[report]
omit =
    */python?.?/*
    */tests/*
    */_version.py
    */versioneer.py
    *__init__*

exclude_lines =
    # Need to explicitly re-enable the standard pragma
    pragma: no cover

    if __name__ == '__main__':
    def __repr__

show_missing = True